<?xml version="1.0" ?>
<GameObjectClass>
  <Type>WEAPON</Type>
  <Solid>true</Solid>
  <CharacterCollide>false</CharacterCollide>
  <ProjectileSpeed>60</ProjectileSpeed>
  <Restitution>1</Restitution>
  <SetFriction>true</SetFriction>
  <Friction>0</Friction>
  
  <AllowProjectileOnProjectileCollision>true</AllowProjectileOnProjectileCollision>
  <AllowOtherProjectilesToRemove>false</AllowOtherProjectilesToRemove>
  <ProjectileRemoveOnCollision>false</ProjectileRemoveOnCollision>

  <!--<EclipseBody>true</EclipseBody>-->
  <Width>3</Width>
  <Height>3</Height>

  <Density>1.5</Density>
  <!--<Health>1</Health>-->

  <LinearDamping>1</LinearDamping>
  
  <ExplodeOnRemove>true</ExplodeOnRemove>
  <ExplodeForce>30</ExplodeForce>
  <ExplodeSize>13</ExplodeSize>
  <ExplosionParticleEffect>_new_explosion_enemybomb</ExplosionParticleEffect>
  <ExplosionSound>Combat_M_Enemy_Bomb_Explosion_01</ExplosionSound>
  <ExplodeDamage>2</ExplodeDamage>
  <ExplosionRefraction>shockwave_2</ExplosionRefraction>
  <SetLayer>FULLBRIGHT</SetLayer>

  <ParticleEffect>_new_trail_enemybomb</ParticleEffect>
  <RemoveAfterStarted>1.5</RemoveAfterStarted>
  <AmbientSound>Combat_M_Enemy_Bomb_Loop</AmbientSound>

  <OnFireProjectileLight>
    <Type>Point</Type>
    <Color>
      <X>0.75</X>
      <Y>0.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>2</Strength>
    <Radius>400</Radius>
  </OnFireProjectileLight>

  <OnExplodeLight>
    <Type>Point</Type>
    <Color>
      <X>0.5</X>
      <Y>0.5</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>20</Strength>
    <Radius>1500</Radius>
    <RadiusModifier>-100</RadiusModifier>
  </OnExplodeLight>
</GameObjectClass>
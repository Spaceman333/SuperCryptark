    <Type>Point</Type>
    <Color>
      <X>.75</X>
      <Y>0.75</Y>
      <Z>0.5</Z>
      <W>1</W>
    </Color>
    <Strength>2</Strength>
    <Radius>500</Radius>
  </OnFireProjectileLight>

  <OnRemoveLight>
    <Type>Point</Type>
    <Color>
      <X>1</X>
      <Y>0.5</Y>
      <Z>0.1</Z>
      <W>1</W>
    </Color>
    <Strength>20</Strength>
    <Radius>1000</Radius>
    <RadiusModifier>-200</RadiusModifier>
  </OnRemoveLight>

  <ProjectileColor>
    <X>0.75</X>
    <Y>0.75</Y>
    <Z>0.5</Z>
  </ProjectileColor>
  <SetLayer>FULLBRIGHT</SetLayer>

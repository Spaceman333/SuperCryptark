<?xml version="1.0"?>
<GameObjectClass>
  <Type>WEAPON</Type>
  
  <!--<Solid>true</Solid>-->
  <FakeProjectile>true</FakeProjectile>
  
  <!--<EclipseBody>true</EclipseBody>-->
  <Width>2</Width>
  <Height>2</Height>
  <ParticleEffect>_new_trail_enemyblaster</ParticleEffect>
  <ParticleEffectAmount>3</ParticleEffectAmount>
  <CharacterCollide>true</CharacterCollide>

  <ProjectileSpeed>90</ProjectileSpeed>
  
  <HitForce>100</HitForce>
  <DamagePerShot>1</DamagePerShot>

  <DecalType>Bullet</DecalType>

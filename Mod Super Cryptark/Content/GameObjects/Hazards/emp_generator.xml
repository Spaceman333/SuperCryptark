<?xml version="1.0" ?>
<GameObjectClass>
  <Type>EMP_GENERATOR</Type>
  <Displayname>EMP Generator</Displayname>
  <SpineAnimation>emp_generator</SpineAnimation>

  <Solid>true</Solid>
  <BoundingBoxBody>base_box</BoundingBoxBody>
  <Static>true</Static>
  
  <Health>1.5</Health>
  <ZapOnTouch>true</ZapOnTouch>
  <SpawnObjectOnRemove>Hazards\emp</SpawnObjectOnRemove>
  <RemoveParticleEffect>_new_explosion_enemybomb</RemoveParticleEffect>
  <OnRemoveSound>Galvanic Fission_Explode</OnRemoveSound>
  <ParticleEffect>_new_muzzle_lightning</ParticleEffect>
  <ParticleEffectBone>rotator</ParticleEffectBone>

  <SidebarTextureName>hazard_emp_generator</SidebarTextureName>
  <MinimapDescription>Electrical generator that could discharge a cripple pulse if damaged.</MinimapDescription>

  <Light>
    <Type>Point</Type>
    <Color>
      <X>.2</X>
      <Y>.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Shininess>2</Shininess>
    <MinRadius>400</MinRadius>
    <MaxRadius>900</MaxRadius>
    <RadiusCycleScale>3</RadiusCycleScale>
    <OscillateRadius>true</OscillateRadius>
    <Strength>2</Strength>
    <FollowBoneName>rotator</FollowBoneName>
    <FollowOwnRotation>true</FollowOwnRotation>
  </Light>
</GameObjectClass>
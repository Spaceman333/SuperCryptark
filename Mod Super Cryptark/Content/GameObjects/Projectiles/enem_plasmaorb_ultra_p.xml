  <ExplosionRefraction>shockwave_2</ExplosionRefraction>
  <ExplosionSound>Galvanic Fission_Explode</ExplosionSound>
  <ExplodeDamage>30</ExplodeDamage>  
  
  <SetLayer>FULLBRIGHT</SetLayer>


    <Color>
      <X>1</X>
      <Y>0.8</Y>
      <Z>0.1</Z>
      <W>1</W>
    </Color>
    <Strength>2</Strength>
    <Radius>400</Radius>
  </OnFireProjectileLight>

  <OnExplodeLight>
    <Type>Point</Type>
    <Color>
      <X>1</X>
      <Y>0.8</Y>
      <Z>0.1</Z>
      <W>1</W>
    </Color>
    <Strength>20</Strength>
    <Radius>1500</Radius>

<?xml version="1.0" ?>
<GameObjectClass>
  <Type>WEAPON</Type>
  <Texture>Projectiles\shotgun_bullet</Texture>
  
  <!--<Solid>true</Solid>-->
  <FakeProjectile>true</FakeProjectile>
  
  <CharacterCollide>true</CharacterCollide>
  <HitForce>100</HitForce>
  <DamagePerShot>0.175</DamagePerShot>
  <ProjectileRicochetCount>3</ProjectileRicochetCount>
  <ProjectileSpeed>150</ProjectileSpeed>
  <Restitution>1</Restitution>
  <SetFriction>true</SetFriction>
  <Friction>0</Friction>
  <ProjKeepVelocity>true</ProjKeepVelocity>
  <ProjectileHitDebris>true</ProjectileHitDebris>
  
  <DecalType>Bullet</DecalType>

  <OnFireProjectileLight>
    <Type>Point</Type>
    <Color>
      <X>1</X>
      <Y>0.75</Y>
      <Z>0.75</Z>
      <W>1</W>
    </Color>
    <Strength>1.8</Strength>
    <Radius>200</Radius>
  </OnFireProjectileLight>

  <OnRemoveLight>
    <Type>Spotlight</Type>
    <Color>
      <X>1</X>
      <Y>0.5</Y>
      <Z>0.1</Z>
      <W>1</W>
    </Color>
    <Position>
      <Z>40</Z>
    </Position>
    <Direction>
      <X>1</X>
      <Y>0</Y>
      <Z>0.3</Z>
    </Direction>
    <Strength>20</Strength>
    <InnerConeAngle>0.5</InnerConeAngle>
    <OuterConeAngle>1.5</OuterConeAngle>
    <Radius>300</Radius>
    <RadiusModifier>-100</RadiusModifier>
  </OnRemoveLight>

  <ProjectileColor>
    <X>1</X>
    <Y>0.8</Y>
    <Z>0.5</Z>
  </ProjectileColor>
  <SetLayer>FULLBRIGHT</SetLayer>
</GameObjectClass>
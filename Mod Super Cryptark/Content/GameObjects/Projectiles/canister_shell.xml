  <ProjectilesPerShot>15</ProjectilesPerShot>
  <ProjectileSpread>0.025</ProjectileSpread>
  <ProjectilePrecision>1</ProjectilePrecision>
  <ProjectileClassfile>Projectiles\shotgun_bullet</ProjectileClassfile>

  <OnFireProjectileLight>
    <Type>Point</Type>
    <Color>
      <X>.75</X>
      <Y>0.75</Y>
      <Z>0.5</Z>
      <W>1</W>
    </Color>
    <Strength>3</Strength>
    <Radius>400</Radius>
  </OnFireProjectileLight>

  <OnExplodeLight>
    <Type>Point</Type>
    <Color>
      <X>1</X>
      <Y>0.5</Y>
      <Z>0.1</Z>
      <W>1</W>
    </Color>
    <Strength>20</Strength>
    <Radius>1000</Radius>
    <RadiusModifier>-200</RadiusModifier>
  </OnExplodeLight>

  <ProjectileColor>
    <X>1</X>
    <Y>1</Y>
    <Z>1</Z>
  </ProjectileColor>
  <SetLayer>FULLBRIGHT</SetLayer>

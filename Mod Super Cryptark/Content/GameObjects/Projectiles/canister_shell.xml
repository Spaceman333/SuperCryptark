<?xml version="1.0" ?>
<GameObjectClass>
  <Type>WEAPON</Type>
  <Texture>Projectiles\bullet02_orange</Texture>
  <Scale>2</Scale>
  <Solid>true</Solid>
  <CharacterCollide>true</CharacterCollide>
  <ProjectileSpeed>150</ProjectileSpeed>
  
  <ProjectileTargetSeekRange>20</ProjectileTargetSeekRange>
  <RemoveOnProjectileTargetFound>true</RemoveOnProjectileTargetFound>
  
  <HitForce>200</HitForce>
  <DamagePerShot>3</DamagePerShot>
  <ParticleEffect>_new_trail_bullet</ParticleEffect>
  <RotateParticleEffect>true</RotateParticleEffect>
  <DecalType>Bullet</DecalType>
  <ExplodeOnRemove>true</ExplodeOnRemove>
  <ExplodeForce>1</ExplodeForce>
  <ExplodeSize>10</ExplodeSize>
  <ExplosionParticleEffect>_new_explosion_small</ExplosionParticleEffect>
  <ExplodeDamage>.1</ExplodeDamage>
  <ExplosionSound>Combat_M_AutoCannon_Blast</ExplosionSound>

  <Payload>true</Payload>
  <PayloadType>PROJECTILE_FIRE</PayloadType>

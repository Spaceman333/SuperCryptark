<?xml version="1.0" ?>
<GameObjectClass>
  <Type>WEAPON</Type>
  <Texture>Projectiles\bomb_red</Texture>
  <NormalMap>Projectiles\bomb_norm</NormalMap>
  <Solid>true</Solid>
  <CharacterCollide>true</CharacterCollide>
  <ProjectileSpeed>60</ProjectileSpeed>
  <SetFriction>true</SetFriction>
  <Friction>1</Friction>
  <LinearDamping>1</LinearDamping>
  <DecalType>Bomb</DecalType>
  <ProjAllowSpin>true</ProjAllowSpin>
  <ProjectileAngularSpeed>15</ProjectileAngularSpeed>
  <Restitution>0</Restitution>
  
  <ProjectileRemoveOnCollision>false</ProjectileRemoveOnCollision>
  <!--<ProjectileRemoveOnCharacterCollision>true</ProjectileRemoveOnCharacterCollision>
  <ProjectileRemoveOnGameObjectCollision>true</ProjectileRemoveOnGameObjectCollision>-->
  
  <ExplodeOnRemove>true</ExplodeOnRemove>
  <ExplodeForce>30</ExplodeForce>
  <ExplodeSize>18</ExplodeSize>
  <ExplosionParticleEffect>_new_explosion_med</ExplosionParticleEffect>
  <ExplosionSound>Blast</ExplosionSound>
  <ExplodeDamage>7</ExplodeDamage>
  <ExplosionRefraction>shockwave_2</ExplosionRefraction>
  
  <ParticleEffect>background-new_trail_grenade</ParticleEffect>
  <ParticleOffset>-10</ParticleOffset>
  <RemoveAfterStarted>1.5</RemoveAfterStarted>
    
  <HasWeaponChargeTexture>true</HasWeaponChargeTexture>

  <OnFireProjectileLight>
    <Type>Point</Type>
    <Color>
      <X>1</X>
      <Y>0.5</Y>
      <Z>0.1</Z>
      <W>1</W>
    </Color>
    <Radius>300</Radius>
    <Strength>1</Strength>
  </OnFireProjectileLight>

  <OnExplodeLight>
    <Type>Point</Type>
    <Color>
      <X>1</X>
      <Y>0.5</Y>
      <Z>0.1</Z>
      <W>1</W>
    </Color>
    <Strength>25</Strength>
    <Radius>2000</Radius>
    <RadiusModifier>-200</RadiusModifier>
  </OnExplodeLight>

  <ProjectileColor>
    <X>1</X>
    <Y>1</Y>
    <Z>1</Z>
  </ProjectileColor>
  <!--<SetLayer>FULLBRIGHT</SetLayer>-->
</GameObjectClass>
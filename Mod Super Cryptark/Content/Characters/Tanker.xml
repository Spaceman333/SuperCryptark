<?xml version="1.0"?>
<CharacterClass xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <SpineAnimation>tanker</SpineAnimation>

  <Health>10</Health>
  <Type>Tanker</Type>
  <DisplayName>Minelayer System</DisplayName>

  <HideOnMinimap>true</HideOnMinimap>
  <Density>8</Density>
  <Inertia>177</Inertia>
  <InertiaNoAirControlMultiply>0.1</InertiaNoAirControlMultiply>
  <BaseMovementForce>11000</BaseMovementForce>
  <Description>Mobile system that travels through the ship depositing minefields.</Description>
  <Maxspeed_Fly>8</Maxspeed_Fly>
  <ToWaypointTimeMultiply>2</ToWaypointTimeMultiply>
  <HealthBarScale>1.5</HealthBarScale>
  
  <Width>20</Width>
  <Height>12</Height>
  <AI_DisableReturn>true</AI_DisableReturn>
  <AI_DisableFindEnemy>true</AI_DisableFindEnemy>
  <FieldOfVision>360</FieldOfVision>
  <IgnoreSystemCollision>true</IgnoreSystemCollision>
  <HazardType>MINES</HazardType>
  <HitBox>goo_tank_box</HitBox>

  <WallFixtureScale>0.5</WallFixtureScale>

<Light>
    <Type>Point</Type>
    <Color>
      <X>1</X>
      <Y>0.5</Y>
      <Z>.6</Z>
      <W>1</W>
    </Color>
    <Strength>2</Strength>
    <Radius>150</Radius>
    <FollowBoneName>goo_tank</FollowBoneName>
  </Light>
    
  <OnRemoveLight>
    <Type>Point</Type>
    <Color>
      <X>0.75</X>
      <Y>0.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>20</Strength>
    <Radius>2000</Radius>
    <RadiusModifier>-150</RadiusModifier>
  </OnRemoveLight>
  
  <DefaultItems>
  </DefaultItems>
</CharacterClass>
  <Weapon1FireDisabled>true</Weapon1FireDisabled>
  <AllowGrapple>true</AllowGrapple>
  <DisableOffscreenAI>true</DisableOffscreenAI>

  <Weapon1>EnemyWeapons\sentinel_gun</Weapon1>
  <Weapon2>EnemyWeapons\sentinel_shield</Weapon2>

  <DefaultItems>
  </DefaultItems>


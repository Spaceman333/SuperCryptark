  <SpineAnimation>heavy_sentinel</SpineAnimation>

  <Health>9</Health>
  <Type>Sentinel</Type>
  <DisplayName>Heavy Sentinel</DisplayName>

  <Width>7</Width>
  <Height>8</Height>
  <Density>8</Density>
  <BaseMovementForce>8000</BaseMovementForce>
  <Maxspeed_Fly>30</Maxspeed_Fly>
  
  <WallFixtureScale>0.5</WallFixtureScale>
  
  <SidebarTextureName>sentinel</SidebarTextureName>

    <Type>Point</Type>
    <Color>
      <X>0.75</X>
      <Y>0.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>2</Strength>
    <Radius>150</Radius>
    <FollowBoneName>root</FollowBoneName>
  </Light>
  
  <OnRemoveLight>
    <Type>Point</Type>
    <Color>
      <X>0.75</X>
      <Y>0.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>20</Strength>
    <Radius>1500</Radius>
    <RadiusModifier>-150</RadiusModifier>

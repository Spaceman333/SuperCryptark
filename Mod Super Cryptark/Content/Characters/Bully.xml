<?xml version="1.0"?>
<CharacterClass xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <SpineAnimation>bully</SpineAnimation>

  <Health>6</Health>
  <Type>Bully</Type>
  <DisplayName>Bully</DisplayName>

  <AllowGrapple>true</AllowGrapple>
  
  <SidebarTextureName>bully</SidebarTextureName>
  <Description>Aggressive drone capable of pushing objects and projectiles with a powerful force projector.
  </Description>

  <Width>10</Width>
  <Height>10</Height>
  <Density>1.5</Density>

  <AI_AimSpeed>1</AI_AimSpeed>
  <!--<AIJukeCombatMovement>true</AIJukeCombatMovement>-->
  
  <Inertia>100</Inertia>
  <InertiaNoAirControlMultiply>0.1</InertiaNoAirControlMultiply>

  <BaseMovementForce>15000</BaseMovementForce>
  <Maxspeed_Fly>40</Maxspeed_Fly>
  <MinCombatDistance>50</MinCombatDistance>

  <Weapon1>EnemyWeapons\force_cone</Weapon1>
  <Weapon1FireDisabled>true</Weapon1FireDisabled>
  
  <AnimationOffset>
    <X>0</X>
    <Y>-15</Y>
  </AnimationOffset>

  <Light>
    <Type>Point</Type>
    <Color>
      <X>0.75</X>
      <Y>0.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>2</Strength>
    <Radius>150</Radius>
    <FollowBoneName>head</FollowBoneName>
  </Light>
  
  <OnRemoveLight>
    <Type>Point</Type>
    <Color>
      <X>0.75</X>
      <Y>0.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>20</Strength>
    <Radius>1500</Radius>
    <RadiusModifier>-150</RadiusModifier>
  </OnRemoveLight>
  
  <DefaultItems>
  </DefaultItems>
</CharacterClass>
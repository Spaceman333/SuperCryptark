  <BodyRotateToFocusPercent>1</BodyRotateToFocusPercent>

  <Light>
    <Type>Point</Type>
    <Color>
      <X>0.75</X>
      <Y>0.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>2</Strength>
    <Radius>150</Radius>
    <FollowBoneName>head</FollowBoneName>
  </Light>
  
  <AimingLight>
    <Type>Spotlight</Type>
    <Position>
      <Z>20</Z>
    </Position>
    <Color>
      <X>1</X>
      <Y>0</Y>
      <Z>0</Z>
      <W>1</W>
    </Color>
    <Direction>
      <X>1</X>
      <Y>0</Y>
      <Z>0.6</Z>
    </Direction>
    <InnerConeAngle>0.2</InnerConeAngle>
    <OuterConeAngle>1.1</OuterConeAngle>
    <Strength>10</Strength>
    <SpecularColor>
      <X>1</X>
      <Y>0</Y>
      <Z>0</Z>
      <W>1</W>
    </SpecularColor>
    <Shininess>5</Shininess>
    <MaxRadius>800</MaxRadius>
    <RadiusModifier>-10</RadiusModifier>
    <Radius>0</Radius>
    <RemoveOnZeroRadius>false</RemoveOnZeroRadius>
  </AimingLight>
  
  <OnRemoveLight>
    <Type>Point</Type>
    <Color>
      <X>0.75</X>
      <Y>0.6</Y>
      <Z>1</Z>
      <W>1</W>
    </Color>
    <Strength>20</Strength>
    <Radius>1500</Radius>
    <RadiusModifier>-150</RadiusModifier>

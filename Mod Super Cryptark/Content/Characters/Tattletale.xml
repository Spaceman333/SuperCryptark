<?xml version="1.0"?>
<CharacterClass xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <SpineAnimation>tattletale</SpineAnimation>

  <Health>1.25</Health>
  <Type>Tattletale</Type>
  <DisplayName>Tattletale</DisplayName>

  <Width>6</Width>
  <Height>3.5</Height>

  <Density>0.5</Density>
  <Inertia>30</Inertia>
